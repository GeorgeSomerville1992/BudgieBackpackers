!!!
%html
  %head
    %meta{charset: "utf-8"}/
    %meta{content: "width=device-width, initial-scale=1.0", name: "viewport"}/
    %title BudgieBackpackers
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "vendor/modernizr"
    
    = csrf_meta_tags
  %body
    / #container
    /   .user-nav
    /     - if user_signed_in?
    /       Logged in as
    /       %b= current_user.email
    /       = link_to 'Edit Profile', edit_user_registration_path
    /       \|
    /       = link_to 'Logout',  destroy_user_session_path, method: :delete
    /     - else
    /       = link_to 'Sign up', new_user_registration_path
    /       \|
    /       = link_to 'Login', new_user_session_path

    /   - flash.each do |name, msg|
    /     = content_tag :div, msg, :id => "flash_#{name}"
    %nav.top-bar{"data-topbar" => ""}
      %ul.title-area
        %li.name
          %h1
            %a{href: "#"} My Site
      %section.top-bar-section
        %ul.right
          - if user_signed_in?
            %li.has-dropdown
              = current_user.email
              %ul.dropdown
                %li
                  = link_to 'Logout', destroy_user_session_path, method: 'delete'
                %li
                  = link_to 'Edit Profile', edit_user_registration_path  
          - else
            %li
              = link_to 'Login', new_user_session_path
            %li.active
              = link_to 'Sign Up', new_user_registration_path          
            

        %ul.left 
          %li
            %img{src: "http://placehold.it/100x45&text=Logo"}/         
          %li
            = link_to 'Hostels', hostels_path
          %li 
            = link_to 'Attractions', attractions_path  

    .row
      .large-12.columns
        %img{src: "http://placehold.it/1000x400&text=[img]"}/
        %hr/
    .row
      .large-4.columns
        %img{src: "http://placehold.it/400x300&text=[img]"}/
      .large-8.columns
        %h4 This is a content section.      
        = yield
        = javascript_include_tag "application"


   