.row
  %h2 Listing posts
  %hr/
  .large-12.columns{style: "width:100%; height:700px; overflow:scroll;"}
    %table
      %tr
        %th Title
        %th Name
        %th Body
        %th Datecreated
        %th actions
      - @posts.each do |post|
        %tr
          %td= post.title
          %td= post.name
          %td= post.body
          %td= post.date_created
          %td= post.date_edited
          %td= link_to 'Show', post
          %td= link_to 'Edit', edit_post_path(post)
          %td= link_to 'Destroy', post, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Post', new_post_path
