- content_for :templates do
  %script#hostel-show-template{type: "text/template"}
    %ul
      %li Name: <%= name %>
      
      %li Longitude: <%= longitude %>
      %li Latitude: <%= latitude %>
      %li
        %button.hostel-info-button{"data-hotelId" => "<%= hotelId %>".html_safe}
  %script#hostel-show-detailed-template{type: "text/template"}
    %ul
      %li Low Rate: <%= lowRate %>
      %li High Rate: <%= highRate %>
      %li hotelRating: <%= hotelRating %>
      

           
.row
  .large-12.columns
    .large-4.columns
      #map-canvas{:style => "width: 100%; height: 300px"}
    .large-5.columns  
      #hostelResults
  %br    
  %hr/


%p#notice= notice
%p
  %b Address:
  = @hostel.address
= content_tag "p", id: "latitude", data: {hostels: @hostel.latitude} do 
  %b Latitude:
  = @hostel.latitude
= content_tag "p", id: "longitude", data: {hostels: @hostel.longitude} do 
  %b Longitude:
  = @hostel.longitude
  %b arrivaldate: 
  = @hostel.arrivalDate
  %b departedate: 
  = @hostel.departureDate



= link_to 'Edit', edit_hostel_path(@hostel)
\|
= link_to 'Back', hostels_path

%h3 nearby saved hostels
- for hostel in @hostel.nearbys(10)
  %li = link_to hostel.address, hostel (hostel.distance.round(10) miles)

%h3 hostels 
/ = @api  

