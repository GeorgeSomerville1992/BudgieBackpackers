= form_for @hostel do |f|
  - if @hostel.errors.any?
    #error_explanation
      %h2= "#{pluralize(@hostel.errors.count, "error")} prohibited this hostel from being saved:"
      %ul
        - @hostel.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :address
    = f.text_field :address
  .field
    = f.label :latitude
    = f.text_field :latitude
  .field
    = f.label :longitude
    = f.text_field :longitude
  .actions
    = f.submit 'Save'
