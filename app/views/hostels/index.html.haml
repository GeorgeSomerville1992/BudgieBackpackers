= include_gon
.row
  %h2 
    Welcome
    = current_user.name
    - if current_user.profileImage?
      = image_tag current_user.profileImage, class: "large-avatar"

  %hr/
  .large-12.columns
    #map3d{style: "height: 400px; width: 100%;"}
    %br/
.row    
  .large-6.columns
    
    %h2 Your Saved locations
    %br/
    %table#cyan.responsive
      %tr
        %th Address
        %th Arrival Date
        %th Departure date
        %th{colspan:"3"} Actions

      - current_user.hostels.each do |hostel|
        %tr
          %td= hostel.address
          %td= hostel.arrivalDate
          %td= hostel.departureDate
          %td= link_to 'Show', hostel
          %td= link_to 'Edit', edit_hostel_path(hostel)
          %td= link_to 'Destroy', hostel, :method => :delete, :data => { :confirm => 'Are you sure?' }
            
              
    = link_to 'New hostel', new_hostel_path, class: "button"


  .large-6.columns
    %h2 Your Journey
    %br/
    %table#cyan.responsive
      %tr
        %th Title
        %th Location
        %th Date Created
        %th Created By 
        %th Action
      - current_user.posts.each do |post|
        %tr 
          %td= post.title
          %td= post.location
          %td= post.date_created
          %td 
            Created by 
            = post.name
          %td= link_to 'Show', post
          %td= link_to 'Edit', edit_post_path(post)
          %td= link_to 'Destroy', post, :method => :delete, :data => { :confirm => 'Are you sure?' }
             
    
    = link_to 'New post', new_post_path, class: "button"
    

  / - @attractions.each do |attraction|
  /   %tr
  /     %td= attraction.address
  /     %td= attraction.latitude
  /     %td= attraction.longitude
  /     %td= link_to 'Show', attraction
  /     %td= link_to 'Edit', edit_attraction_path(attraction)
  /     %td= link_to 'Destroy', attraction, :method => :delete, :data => { :confirm => 'Are you sure?' }

/ = link_to 'New attraction', new_attraction_path

