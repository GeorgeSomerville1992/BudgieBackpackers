= include_gon
.row
  %h2 
    Welcome
    = current_user.name
  %hr/
  .large-12.columns
    #map3d{style: "height: 400px; width: 100%;"}
    %br/
.row    
  .large-6.columns
    
    %h2 Your Saved locations
    %br/
    %table#cyan.responsive
      %tr
        %th Address
        %th Arrival Date
        %th Departure date
        %th Actions

      - @hostels.each do |hostel|
        %tr
          %td= hostel.address
          %td= hostel.arrivalDate
          %td= hostel.departureDate
          %td
            %li
              = link_to 'Show', hostel
            %li
              = link_to 'Edit', edit_hostel_path(hostel) 
            %li
              = link_to 'Destroy', hostel, :method => :delete, :data => { :confirm => 'Are you sure?' }  
    = link_to 'New hostel', new_hostel_path, class: "button", id: "buttoncyan"


  .large-4.columns
    %h2 Your Journey

    %table 
      - @posts.each do |post|
        %tr 
          %td= post.title
          %td= post.location
          %td= post.date_created
          %td= post.date_edited
          %td 
            Created by 
            = post.name
          %td
    = link_to 'new post', new_post_path   
    

